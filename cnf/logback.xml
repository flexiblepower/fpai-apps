<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %-36.36logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.flexiblepower.runtime.ui" level="ERROR" />
    <logger name="org.flexiblepower" level="DEBUG" />
    <logger name="org.flexiblepower.battery" level="ERROR" />
    <logger name="net.powermatcher" level="ERROR" />
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    
</configuration>

