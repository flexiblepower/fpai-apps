<?xml version="1.0" encoding="UTF-8"?>
<project name="fpai-extras" default="build">
	<property name="version" value="1.0-SNAPSHOT" />

	<property name="releasedir" value="/var/www/html/releases/fpai-extras" />

	<fileset id="build" dir="..">
		<include name="*/build.xml" />
		<exclude name="cnf/*" />
	</fileset>

	<fileset id="release" dir="..">
		<include name="*/build.xml" />
		<exclude name="cnf/*" />
		<exclude name="*.test/*" />
	</fileset>

	<target name="echo">
		<subant target="echo">
			<fileset refId="build" />
		</subant>
	</target>
	
	<target name="build">
		<subant target="build">
			<fileset refId="build" />
		</subant>
	</target>

	<target name="release">
		<subant target="release">
			<fileset refId="release" />
		</subant>
	</target>

	<target name="coverage-report">
		<subant target="coverage-report">
			<fileset refId="build" />
		</subant>
	</target>

	<target name="test" depends="build">
		<subant target="test">
			<fileset dir="..">
				<include name="*.test/build.xml" />
			</fileset>
		</subant>
	</target>

	<target name="clean">
		<delete dir="release" />
		<mkdir dir="release" />
		<subant target="clean">
			<fileset refId="build" />
		</subant>
	</target>
	
	<target name="checkstyle">
		<subant target="checkstyle">
			<fileset refId="build" />
		</subant>
	</target>

	<target name="publishrelease" depends="release">
		<delete dir="${releasedir}/${version}/repo" />
		<mkdir dir="${releasedir}/${version}/repo" />
		<copy todir="${releasedir}/${version}/repo">
			<fileset dir="release" />
		</copy>
		
		<zip basedir=".." destfile="${releasedir}/${version}/fpai-extras-sources-${version}.zip">
			<include name="*/src/**"/>
			<include name="*/test/**"/>
			<include name="*/res/**"/>
			<include name="*/*.bnd"/>
			<include name="*/build*.xml"/>
			<include name="cnf/**"/>
			
			<exclude name="cnf/cache/**"/>
			<exclude name="cnf/tools/**"/>
			<exclude name="cnf/release/**"/>
		</zip>
		
		<zip basedir="release" destfile="${releasedir}/${version}/fpai-extras-bundles-${version}.zip">
			<include name="**" />
		</zip>
	</target>
</project>
